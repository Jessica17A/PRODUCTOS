@model IEnumerable<Productos.Models.Categoria>

@{
    ViewData["Title"] = "Listado de Categorías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <h1>Listado de Categorías</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <a asp-action="Create" class="btn btn-success">Crear una Nueva</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12 d-flex justify-content-end">
            <form asp-action="Index" method="get" class="d-flex">
                <div class="form-group d-flex">
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Buscar" style="max-width: 600px; margin-right: 10px;">
                    <button type="submit" class="btn btn-info">Buscar</button>
                </div>
            </form>
        </div>
    </div>
    <br />
    <table class="table">
        <thead class="table-primary">
            <tr>
                <th>Nombre de la categoría</th>
                <th>Descripción</th>
                <th>Fecha de Creación</th>
                <th>Fecha de Modificación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NombreCategoria)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CategoriaID" class="btn btn-warning btn-sm" title="Editar">
                            <i class="bi bi-pencil"></i>
                        </a> |
                        <a asp-action="Details" asp-route-id="@item.CategoriaID" class="btn btn-info btn-sm" title="Detalles">
                            <i class="bi bi-info-circle"></i>
                        </a> |
                        <a asp-action="Delete" asp-route-id="@item.CategoriaID" class="btn btn-danger btn-sm" title="Eliminar">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

