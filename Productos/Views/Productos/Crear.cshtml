@model Productos.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container mt-5" style="max-width: 900px;">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex" style="background-color: #fff7ef; padding: 20px; border-radius: 4px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <!-- Columna para la imagen -->
                <div class="d-flex align-items-center" style="margin-right: 40px;">
                    <img src="~/img/crear_producto.jpg" alt="Imagen del Producto" class="img-fluid" style="max-height: 300px; width: 450px; object-fit: cover; border-radius: 5px;" />
                </div>

                <!-- Columna para el formulario -->
                <div class="card p-4 shadow-sm" style="background-color: #fff7ef; max-width: 500px;">
                    <form asp-action="Crear" method="post" enctype="multipart/form-data">
                        <h2 class="mb-4 text-center">Crear Producto</h2>

                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label" style="text-align: left !important;"></label>
                            <input asp-for="Nombre" class="form-control" style="max-width: 450px;" placeholder="Nombre del producto" required />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Descripcion" class="form-label" style="text-align: left !important;"></label>
                            <textarea asp-for="Descripcion" class="form-control" style="max-width: 450px;" rows="3" placeholder="Descripción del producto" required></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Precio" class="form-label" style="text-align: left !important;"></label>
                            <input asp-for="Precio" class="form-control" style="max-width: 450px;" type="number" step="0.01" placeholder="Precio del producto" required />
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Fk_Categoria" class="form-label" style="text-align: left !important;">Categoría</label>
                            <select asp-for="Fk_Categoria" class="form-control" asp-items="@(new SelectList(ViewBag.Categorias, "CategoriaID", "NombreCategoria"))" style="max-width: 450px;" required>
                                <option value="">Seleccione una categoría</option>
                            </select>
                            <span asp-validation-for="Fk_Categoria" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label for="file" class="form-label" style="text-align: left !important;">Subir Foto</label>
                            <input type="file" name="file" class="form-control" style="max-width: 450px;" required />
                            <span asp-validation-for="Foto" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success" style="width: 100px;">
                            <i class="fa-solid fa-folder-arrow-up"></i> Crear
                        </button>
                    </form>

                    <!-- SweetAlert para mostrar mensaje de confirmación -->
                    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

                    <script>
                        // Mostrar la alerta si TempData["ProductoCreado"] está presente
                        @if (TempData["ProductoCreado"] != null)
                        {
                            <text>
                                Swal.fire({
                                    title: 'Producto Creado',
                                    text: 'El producto ha sido creado exitosamente.',
                                    icon: 'success',
                                    confirmButtonText: 'OK'
                                });
                            </text>
                        }
                    </script>

                </div>
            </div>
        </div>
    </div>
</div>
}

<!-- Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap JavaScript Bundle -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
